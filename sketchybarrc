# battery
sketchybar --add item battery right                                 \
           --set      battery icon=                                \
                              icon.color=0xffa6e3a1                 \
                              background.border_color=0xFF1e1e1e    \
                              label="--%"                           \
                              script='./scripts/battery.sh'         \
                              update_freq=20

# ~~ hotload ~~
sketchybar --hotload on
sketchybar --update

PLUGIN_DIR="$CONFIG_DIR/plugins"

# ~~ bar ~~
sketchybar --bar position=top \
                 height=30 \
                 blur_radius=30 \
                 color=0xFF1e1e2e \
                 margin=15 \
                 corner_radius=8 \
                 y_offset=7 \
                 border_width=1 \
                 display=main \
                 topmost=off \
                 border_color=0xff89b4fa \

# ~~ default ~~
default=(
  padding_left=0
  padding_right=0
  icon.font="JetBrainsMono Nerd Font:Thin:14.0"
  label.font="JetBrainsMono Nerd Font:Thin:12.0"
  icon.color=0xffcdd6f4
  label.color=0xffcdd6f4
  icon.padding_left=0
  icon.padding_right=0
  label.padding_left=10
  label.padding_right=10
  background.border_width=1
  # background.color=0xFF89b4fa    # backgound color ist nur für die Items
  background.padding_left=0
  background.padding_right=10
  background.corner_radius=10 
)
sketchybar --default "${default[@]}"


# ~~ left items ~~
# APPLE=(
#   icon=
#   icon.color=0xffa6e3a1
#   icon.padding_left=0
#   label.drawing=off
#   background.padding_left=0
#   background.padding_right=10
#   background.color=0xFF1e1e1e
# )
#
# sketchybar --add item apple left \
#            --set apple "${APPLE[@]}"
           
# aerospace
sketchybar --add event aerospace_workspace_change \
           --add event window_focus

sketchybar --add item space_listener center \
    --subscribe space_listener aerospace_workspace_change window_focus \
    --set space_listener \
    drawing=off \
    script="$CONFIG_DIR/plugins/aerospace.sh"
    

# Workspace Icons
SPACE_ICONS=("1" "2" "3" "4" "5" "6" "7" "8" "9" "0")
SPACE_ICON_COLOR_ACTIVE=0xff89b4fa   
SPACE_ICON_COLOR_INACTIVE=0xfff38ba8 

for sid in $(aerospace list-workspaces --all); do
    icon_index=$((sid -1))
    sketchybar --add item space.$sid left \
        --set space.$sid \
        background.color=0xFF1e1e1e \
        background.corner_radius=5 \
        background.height=20 \
        icon.color=$SPACE_ICON_COLOR_INACTIVE \
        icon.padding_left=2 \
        icon.padding_right=2 \
        background.drawing=off \
        icon="${SPACE_ICONS[$icon_index]}" \
        label.drawing=off \
        click_script="aerospace workspace $sid"
done

sketchybar --add item space.0 left \
    --set space.0 \
    background.color=0xFF1e1e1e \
    background.corner_radius=5 \
    background.height=20 \
    icon.color=$SPACE_ICON_COLOR_INACTIVE \
    icon.padding_left=2 \
    icon.padding_right=2 \
    background.drawing=off \
    icon="${SPACE_ICONS[10]}" \
    label.drawing=off \
    click_script="aerospace workspace 0"
# chevron
